<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Financial Analysis Shopping Cart Checkout Widget</title>
  <link rel="stylesheet" href="css/style.css">
  
</head>
<body>
  <div class="cart">
    <div class="cart-top">
      <h2 class="cart-top-title">Track your sales</h2>
      <div class="cart-top-info">1 item</div>
    </div>

    <ul>
      <li class="cart-item">
        <span class="cart-item-pic">
          <img src="images/PFP.png">
        </span>
        Pyeramid Financial Police
        <span class="cart-item-desc">This version tracks sale records like total stock bought/sold in a given time period, of six products, as well as their financial translations and comparative analysis. </span>
        <span class="cart-item-price">$200.00</span>
      </li>

     
    </ul>

    <div class="cart-bottom">
      Total: $200.00
    
    </div>
  </div>

  <div class="about">
    <div id="smart-button-container">
      <div style="text-align: center;">
        <div id="paypal-button-container"></div>
      </div>
    </div>
    <div id="smart-button-container">
      <div style="text-align: center;">
        <div id="paypal-button-container"></div>
      </div>
    </div>
  <script src="https://www.paypal.com/sdk/js?client-id=ATvZ-W8hiNeRKtBN9u3sbxwxU1cVkojjMPPeCO5NqOlBNpYomipGU6Ga0KUTFTLGUM3wY5PM9e1W2Qu4&amp;currency=USD" data-sdk-integration-source="button-factory"></script>
  <script>
    function initPayPalButton() {
      paypal.Buttons({
        style: {
          shape: 'rect',
          color: 'gold',
          layout: 'vertical',
          label: 'paypal',
          
        },

        createOrder: function(data, actions) {
          return actions.order.create({
            purchase_units: [{"amount":{"currency_code":"USD","value":3.7}}]
          });
        },

        onApprove: function(data, actions) {
          return actions.order.capture().then(function(details) {
            alert('Transaction completed by ' + details.payer.name.given_name + '!');
          });
        },

        onError: function(err) {
          console.log(err);
        }
      }).render('#paypal-button-container');
    }
    initPayPalButton();
  </script>
    </div>
</body>

</html>





